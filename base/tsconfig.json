{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "esnext",
    "jsx": "react",
    "esModuleInterop": true,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "@utils": [
        "utils/*"
      ]
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": ["node_modules"]
}